Object subclass: #Kember	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'Zaemis'!!Kember methodsFor: 'as yet unclassified' stamp: 'TMB 6/15/2011 00:01'!md5: text	"return 32-char MD5 hash of the given text" 	^ (MD5 new hashStream: (ReadStream on: text)) hex.! !!Kember methodsFor: 'as yet unclassified' stamp: 'TMB 6/15/2011 22:21'!nextHash: hash	"increment the MD5 hash"	^ ((ByteArray fromHexString: hash) asInteger + 1) asByteArray hex.! !!Kember methodsFor: 'as yet unclassified' stamp: 'TMB 6/15/2011 21:59'!test: hash	"Test whether the hash exhibits Kember Identity"	Transcript cr; show: 'Testing ' , hash , '... '.	^ (self md5: hash) = hash		ifTrue: [Transcript show: 'Pass!!'. true]		ifFalse: [Transcript show: 'Fail!!'. false].! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!Kember class	instanceVariableNames: ''!!Kember class methodsFor: 'as yet unclassified' stamp: 'TMB 6/15/2011 22:25'!run	"check for hash that exhibits Kember Identity"	| k hash next |	k := Kember new.	hash := '00000000000000000000000000000000'.	next := k nextHash: hash.	[next = '0100000000000000000000000000000000' | (k test: hash)] 		whileFalse: [			hash := next.			next := k nextHash: next].! !